<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="borderViewStyle" format="reference" />

    <declare-styleable name="BorderView">
        <attr name="borderTopDrawable" format="reference" />
        <attr name="borderBottomDrawable" format="reference" />
        <attr name="borderTopVisibility" format="enum">
            <enum name="never" value="0" />
            <enum name="whenTop" value="1" />
            <enum name="whenContentScrolled" value="2" />
            <enum name="always" value="3" />
        </attr>
        <attr name="borderBottomVisibility" format="enum">
            <enum name="never" value="0" />
            <enum name="whenBottom" value="1" />
            <enum name="whenContentScrolled" value="2" />
            <enum name="always" value="3" />
        </attr>
        <attr name="borderTopStyle" format="enum">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
        </attr>
        <attr name="borderBottomStyle" format="enum">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
        </attr>
    </declare-styleable>
</resources>